# Database
DATABASE_URL="postgresql://timeclock:timeclock@localhost:5432/timeclock?schema=public"

# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=7d

# Discord Bot
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_GUILD_ID=your-discord-guild-id
DISCORD_CLOCK_CHANNEL_ID=your-clock-channel-id
DISCORD_ANNOUNCEMENT_CHANNEL_ID=your-announcement-channel-id

# Google Calendar
GOOGLE_CALENDAR_ID=your-calendar-id
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Google Drive
GOOGLE_DRIVE_FOLDER_ID=your-drive-folder-id

# Notion
NOTION_API_KEY=your-notion-integration-key
NOTION_DATABASE_ID=your-notion-database-id

# System Config
DEFAULT_WORK_START_TIME=08:30
DEFAULT_WORK_END_TIME=18:00
DEFAULT_LUNCH_START_TIME=12:00
DEFAULT_LUNCH_END_TIME=13:30
LATE_GRACE_MINUTES=5
ADVANCE_NOTICE_MINUTES=30
TOKEN_EXPIRY_DAYS=30

# Time Zone
TZ=Asia/Taipei
